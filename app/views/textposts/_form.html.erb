
<%= form_for [@idea,@textpost], :html => { :multipart => true } do |f| %>

	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :date, :value => Date.today%>
	

	<div class="field"> Title:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :subject %> </div><br>

	
	
	<div class="field"> Website:&nbsp;&nbsp;&nbsp;<%= f.text_field :link %></div>
	<div class="field"> <br><br>
	<%= f.text_area :content, :size => "80x15"%>
	</div><div class="postphoto">
	<strong>Add a photo!</strong><br>
	<div class="field"><%= f.file_field :picture %></div></div>



	<div class="field"><br>
	<%= f.submit %>
	</div>
<% end %>