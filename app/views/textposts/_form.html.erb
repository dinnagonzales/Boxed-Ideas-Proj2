
<%= form_for(@textpost) do |f| %>

	<div class="field"> Title:<br>
	<%= f.text_field :subject %>
	</div>

	<div class="field"> Body:<br>
	<%= f.text_area :content, :size => "100x20"%>
	</div>

	<div class="field"> Submitted By:<br>
	<%= f.text_field :user %>
	</div>


	<div class="field"><br>
	<%= f.submit %>
	</div>
<% end %>